<% provide(:title, "Home") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info', user_info: current_user %>
      </section>
      <section class="task_form">
        <%= render 'shared/task_form' %>
      </section>
    </aside>
    <div class="col-md-8">
    <%= render 'filters' %>
      <h3>Created Tasks</h3>
      <%= render 'shared/created_tasks' %>
      <h3>Assigned Tasks</h3>
      <%= render 'shared/assigned_tasks' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>ToDoList App</h1>
    <h2>
      Powered by
      <a href="http://www.railstutorial.org/">Ruby on Rails Tutorial</a>
      sample application.
    </h2>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>