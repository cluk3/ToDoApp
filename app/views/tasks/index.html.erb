<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>Value</th>
      <th>Completed</th>
      <th>Category</th>
      <th>Overdue</th>
      <th>Assignee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.owner %></td>
        <td><%= task.value %></td>
        <td><%= task.completed %></td>
        <td><%= task.category %></td>
        <td><%= task.overdue %></td>
        <td><%= task.assignee %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

